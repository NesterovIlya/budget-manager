<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="dbms" value="h2" context="integration-test"/>
    <property name="dbms" value="h2" context="system-test"/>
    <property name="dbms" value="postgresql" context="postgresql-integration-test"/>
    <property name="dbms" value="postgresql" context="development"/>
    <property name="dbms" value="postgresql" context="production"/>

    <property name="schema" value="public" context="integration-test"/>
    <property name="schema" value="budget-manager-test" context="postgresql-integration-test"/>
    <property name="schema" value="public" context="system-test"/>

    <property name="schema" value="budget-manager-dev" context="development"/>
    <property name="schema" value="budget-manager" context="production"/>

    <property name="blob_type" value="bytea" dbms="postgresql"/>
    <property name="timestamp_type" value="timestamp(6) with timezone" dbms="postgresql"/>
    <property name="timestamp_type" value="timestamp(6)" dbms="h2"/>


    <preConditions>
        <dbms type="${dbms}" />
    </preConditions>

    <include file="1.0.xml" relativeToChangelogFile="true"/>
    <include file="init-custom-data.xml" relativeToChangelogFile="true"/>

</databaseChangeLog>